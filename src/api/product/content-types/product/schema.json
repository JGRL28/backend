{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "Product",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "productName": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "productName"
    },
    "description": {
      "type": "text",
      "required": true
    },
    "imageProduct": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "availabilityProduct": {
      "type": "boolean",
      "default": true,
      "required": true
    },
    "priceProduct": {
      "type": "decimal",
      "required": true
    },
    "characteristics": {
      "type": "enumeration",
      "enum": [
        "frozen",
        "fresh",
        "groceries"
      ],
      "required": true
    },
    "isFeatured": {
      "type": "boolean"
    },
    "category": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::category.category"
    }
  }
}
